.reorder-highlight {
	background: #f6f6f6!important;
	-moz-box-shadow:inset 0 0 6px #dbdbdb;
	-webkit-box-shadow:inset 0 0 6px #dbdbdb;
}

#dragHelper td {
	font-size: 11px!important;
	padding: 3px!important;
	margin: 0!important;
}

#dragHelper li {
	margin: 0!important;
}

#dragHelper strong {
	color: #21759B;
	padding-right: 10px;
}

#reorder-list>ul ul, #dragHelper ul {
	margin-left: 0;
	padding: 0 0 0 18px!important;
	background: url(indent.gif) 0 10px;
}

#reorder-list>ul {
	padding: 10px 0;
}


#reorder-list li {
	margin: 0;
	background: #fff;
	cursor: move;	
}

.reorder-id {
	color: #b1b1b1;
}

/*post status*/
#reorder-list li.draft strong, #reorder-list li.future strong, #reorder-list li.private strong {color: #b1b1b1}

#reorder-list strong span, #dragHelper strong span {
	background: #e0e0e0;
	font-weight: normal;
	color: #fff;
	padding: 2px 6px;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	margin-left: 10px;
	font-size: 9px;
}


#reorder-list table:hover {background: #f8f8f8}
#reorder-list table:hover strong {color: #d54e21}

#dragHelper li, #dragHelper ul {
	background: yellow;
}

#reorder-list>ul li strong, #order-posts-list li.draft li strong, #reorder-list>ul li.private li strong, #reorder-list>ul li.future li strong
{
	color: #21759B;
	padding-right: 10px;
}

#dragHelper li strong {
	font-size: 11px!important;
}

.reorder-inner {
	width: 100%;
	border-collapse: collapse;
}

.reorder-inner td {
	border: 0;
	padding: 4px 5px;
}

p#reorder-loading span {
	padding-left: 10px;
}


